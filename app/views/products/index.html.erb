<h1>Listing products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Stock quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= product.stock_quantity %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>

<ul>
  <li>Average Price: <%= number_to_currency(@average_price) %></li>
  <li>Maximum Price: <%= number_to_currency(@maximum_price) %></li>
  <li>Total Number of Products: <%= @number_of_products %></li>
  <li>Total Stock of All Items: <%= @total_stock %></li>
</ul>

<%= 100.times do %>
  <p>Chunky Bacon</p>
<% end %>